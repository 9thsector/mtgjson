//- index.jade
extends layout

block contents
	div#frontmatter

		div#logo
			span#mtgjson MTG JSON
			span#slogan Provides Magic: the Gathering card data in JSON format
			span#currentversion
				div 
					span Current version:
					a(href="/changelog.html")=version
					div=lastUpdated
		div#downloads
			div
				span
					a(href="/json/AllSets.json.zip")="All Sets " + allSizeZip
				span
					a(href="/json/AllCards.json.zip")="All Cards " + allCardsSizeZip
			div
				span
					a(href="/json/AllSets-x.json.zip")="All Sets + Extras " + allSizeXZip
				span
					a(href="/json/AllCards-x.json.zip")="All Cards + Extras " + allCardsSizeXZip
			div
				form(action="https://www.paypal.com/cgi-bin/webscr",method="post",target="_top")
					input(type="hidden",name="cmd",value="_s-xclick")
					input(type="hidden",name="hosted_button_id",value="GQC8KTKMYEQPA")
					input(type="image",src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif",border="0" name="submit",alt="PayPal")
					img(alt="",border="0",src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif",width="1",height="1")
		div.down
			img(src="/images/down.png")
